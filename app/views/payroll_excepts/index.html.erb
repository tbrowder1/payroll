<h1>Listing payroll_excepts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payroll_excepts.each do |payroll_except| %>
      <tr>
        <td><%= payroll_except.name %></td>
        <th><%= payroll_except.user.email if payroll_except.user %></td>
        <td><%= link_to 'Show', payroll_except %></td> 
        <% if payroll_except.user == current_user %>
          <td><%= link_to 'Edit', edit_payroll_except_path(payroll_except) %></td>
          <td><%= link_to 'Destroy', payroll_except, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

